<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        #container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
        }

        #chat {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 700px;
            padding: 20px;
        }

        #messages {
            height: 600px;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            overflow-y: scroll;
            margin-bottom: 10px;
            padding: 10px;
        }

        #message-form {
            display: flex;
        }

        #message-input {
            flex-grow: 1;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            padding: 5px 10px;
            outline: none;
        }

        #message-form button {
            background-color: #4CAF50;
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 0 0 0 10px;
            cursor: pointer;
            border-radius: 5px;
            padding: 6px 12px;
            outline: none;
        }

        #message-form button:hover {
            background-color: #45a049;
        }

        .user-message,
        .assistant-message {
            background-color: #f1f1f1;
            border-radius: 5px;
            padding: 5px 10px;
            margin: 5px 0;
            display: inline-block;
            max-width: 80%;
        }

        .user-message {
            background-color: #e6e6e6;
            float: right;
            clear: both;
        }

        .assistant-message {
            background-color: #4CAF50;
            color: white;
            float: left;
            clear: both;
        }

        .typing-indicator {
            display: none;
            color: #888;
            margin: 5px 0;
            float: left;
            clear: both;
        }

        #title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div id="container">
        <div id="chat">
            <div id="title">Chat Bot integrado a IA GPT - 3.5</div>
            <div id="messages">
                <% messages.forEach(function(message) { %>
                    <div class="<%= message.role === 'user' ? 'user-message' : 'assistant-message' %>"><%- message.content %></div>
                    <% }); %>
            </div>
            <form id="message-form">
                <input type="text" id="message-input" placeholder="Digite sua mensagem...">
                <button type="submit">Enviar</button>
            </form>
        </div>
    </div>
    <script>
        document.querySelector('#message-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const input = document.querySelector('#message-input');
            const message = input.value.trim();
            input.value = '';

            if (message.toLowerCase() === 'sair') {
                alert('Encerrando o chat...');
                window.location.reload();
                return;
            }

            const messagesDiv = document.querySelector('#messages');
            messagesDiv.innerHTML += `<div class="user-message">${message}</div>`;

            const typingIndicator = document.createElement('div');
            typingIndicator.className = 'typing-indicator';
            typingIndicator.textContent = 'digitando...';
            messagesDiv.appendChild(typingIndicator);
            typingIndicator.style.display = 'block';

            messagesDiv.scrollTop = messagesDiv.scrollHeight;

            const response = await fetch('/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ content: message }),
            });

            const reader = response.body.getReader();
            let assistantMessage = '';
            
            const assistantDiv = document.createElement('div');
            assistantDiv.className = 'assistant-message';
            messagesDiv.appendChild(assistantDiv);

            while (true) {
                const { done, value } = await reader.read();
                if (done) break;

                const messageChunk = new TextDecoder("utf-8").decode(value);
                assistantMessage += messageChunk;

                assistantDiv.textContent = assistantMessage;
            }

            messagesDiv.removeChild(typingIndicator);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        });
    </script>
</body>

</html>